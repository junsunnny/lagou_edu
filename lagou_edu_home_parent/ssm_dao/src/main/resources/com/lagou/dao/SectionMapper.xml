<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lagou.dao.SectionMapper">

    <resultMap id="findSectionMap" type="com.lagou.domain.CourseSection">
        <id property="id" column="id" />
        <result column="course_id" property="courseId" />
        <result column="section_name" property="sectionName" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_de" property="isDe" />
        <result column="order_num" property="orderNum" />
        <result column="status" property="status" />
        <collection property="lessonList"
                    column="course_id"
                    ofType="com.lagou.domain.CourseLesson"
                    select="com.lagou.dao.LessonMapper.findLessonByCourseID"/>
    </resultMap>

    <!--查询章节信息-->
    <select id="findSectionByCourseId" parameterType="int" resultMap="findSectionMap">
        select
            id,
            course_id,
            section_name,
            description,
            create_time,
            update_time,
            is_de,
            order_num,
            status
            course_section
        where
            course_id = #{courseID}
    </select>
</mapper>